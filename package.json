{
  "name": "attest_ts",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "5.19.1",
    "@types/node": "^25.0.3",
    "dotenv": "^17.2.3",
    "playwright": "^1.57.0",
    "prisma": "5.19.1",
    "sqlite3": "^5.1.7",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/sqlite3": "^5.1.0",
    "dotenv-cli": "^11.0.0",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.21.0"
  },
  "scripts": {
    "test": "playwright test --ui tests/test_baidu.spec.ts",
    "test:headed": "playwright test --headed --project=chromium tests/sse/sse.listener.spec.ts",
    "exec:lonely": "tsx tests/exec_lonely.ts",
    "prisma:generate": "tsx src/utils/db/prisma-cli.ts generate",
    "prisma:migrate": "tsx src/utils/db/prisma-cli.ts migrate",
    "prisma:push": "tsx src/utils/db/prisma-cli.ts push",
    "prisma:deploy": "tsx src/utils/db/prisma-cli.ts deploy",
    "prisma:format": "tsx src/utils/db/prisma-cli.ts format",
    "prisma:validate": "tsx src/utils/db/prisma-cli.ts validate",
    "prisma:cli": "tsx src/utils/db/prisma-cli.ts",
    "db:backup": "tsx scripts/backup-database.ts",
    "db:backup:compress": "tsx scripts/backup-database.ts --compress",
    "prisma:migrate:safe": "npm run db:backup && npm run prisma:migrate"
  }
}
